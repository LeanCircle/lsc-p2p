<%= content_tag(:h1, @peer.current_step.capitalize, class: "center") %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@peer) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= render "peers/steps/#{@peer.current_step}_step", :f => f %>
      
      <div class="actions">
        <% if @peer.last_step? %>
          <p><%= f.button "Submit", class: "btn btn-primary", :name => "submit_button" %></p>
        <% else %>
          <p><%= f.button "Continue", class: "btn btn-primary" %></p>
        <% end %>
        <p><%= f.button "Back", class: "btn", :name => "back_button" unless @peer.first_step? %></p>
      </div>
    <% end %>
  </div>
</div>