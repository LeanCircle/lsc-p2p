.form-group
	= f.label "What locations are possible/convenient for you to meet?"
	= f.text_area :availability_location

.form-group
	= f.label "What times are you available to meet on a weekly basis?"
	= f.select :availability_time, availability_time_options

.form-group
	= f.label "Is your team full time / part time or a mix?"
	= f.text_field :availability_team