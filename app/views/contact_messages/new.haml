- provide(:title, "Contact Us")
%h1.page-title Contact Us

.row
  .col-sm-6.col-sm-offset-3
    %h2.center#call-us
      Would you like to talk to us? Drop us an email:

.row
  .col-sm-6.col-sm-offset-3

    = form_for(@message) do |f|

      = render 'shared/error_messages', object: f.object

      .form-group
        = f.label :name
        = f.text_field :name, :placeholder => 'John Smith'

      .form-group
        = f.label :email
        = f.email_field :email, :placeholder => 'John.Smith@domain.com'

      .form-group
        = f.label :message
        = f.text_area :message, :placeholder => 'I want to talk about...'

      .form-group
        = recaptcha_tags display: { :theme => "white", iframe_width: "100%" }, ajax: true

      .actions
        = f.button "Send!", name: :commit, value: :submit, class: "btn btn-primary"