      - if !@group.errors[:other_link].blank?
        .help-inline= @group.errors.full_message(:other_link, "is dubious")

  .control-group
    .controls
      = f.submit "Submit", :class => 'btn btn-primary'
      = f.submit "Cancel", :class => 'btn'
